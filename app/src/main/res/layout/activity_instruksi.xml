<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    tools:context=".Instruksi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:layout_marginBottom="370dp"
                android:background="@drawable/right_104px"
                android:text="NEXT"
                android:textSize="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_previous"
                app:layout_constraintTop_toBottomOf="@+id/tv_ip" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="131dp"
                android:layout_height="156dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_mengerti"
                app:srcCompat="@drawable/logoaystes" />

            <Button
                android:id="@+id/btn_previous"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="262dp"
                android:layout_marginRight="262dp"
                android:background="@drawable/left_104px"
                android:text="PREVIOUS"
                android:textSize="6dp"
                app:layout_constraintBottom_toBottomOf="@+id/btn_next"
                app:layout_constraintEnd_toStartOf="@+id/btn_next"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_next" />

            <Button
                android:id="@+id/btn_mengerti"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="217dp"
                android:background="@drawable/menu_btn"
                android:text="MENGERTI"
                android:textColor="@android:color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_ip"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="174dp"
                android:layout_weight="1"
                android:text="INSTRUKSI PERMAINAN"
                android:textColor="@android:color/black"
                android:textSize="48dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.435"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ViewFlipper
                android:id="@+id/instruksi"
                android:layout_width="318dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ip">

                <ImageView
                    android:id="@+id/instruksi1"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi1"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi2"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi2"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi3"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi3"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi4"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi4"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi5"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi5"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi6"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi6"
                    tools:layout_editor_absoluteX="0dp" />

                <ImageView
                    android:id="@+id/instruksi7"
                    android:layout_width="318dp"
                    android:layout_height="349dp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ip"
                    app:srcCompat="@drawable/instruksi7"
                    tools:layout_editor_absoluteX="0dp" />


            </ViewFlipper>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</ScrollView>